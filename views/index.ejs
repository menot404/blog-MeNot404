<html lang="en">
<!-- Head-->
<%- include('partials/head') %>
<body>
    <!-- Header -->
    <%- include('partials/header') %>

    <div class="blogs content">
        <h2>All Blogs</h2>
        <%if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <div class="blog">
                    <h3><%= blog.title %></h3>
                    <p><%= blog.snippet %></p>
                    <a href="/api/v1/blogs/<%= blog._id %>">Read More -></a>
                </div>
            <% }) %>
        <% } else { %>
            <p>No blogs available.</p>
        <% } %>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>
</body>
</html>